<!DOCTYPE html>

{% block head %}
<head>
    <meta charset="{{ charset|default('utf-8') }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{% block title %}Vadrouille Covoiturage{% endblock %}</title>
    <meta name='description' content='{% block description %}{% endblock %}'>
    <link rel="shortcut icon" href="/theme/img/favicon.ico" />
    <meta content='{{ robot|default('index, follow, noodp') }}' name="robots">
    <meta content="fr" name="language">
    <meta content="fr" http-equiv="Content-Language">
    <meta content="France, FRANCE" name="location">
    <meta content="Document" http-equiv="VW96.OBJECT TYPE">
    <meta content="IE=8" http-equiv="X-UA-Compatible">


    {% block head_style %}
        {% block stylesheets %}
            {% stylesheets
                '../app/Resources/public/css/style.css'
                filter='cssrewrite'
                output='css/style.css'
            %}
            <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
    {% endblock head_style %}

    {% block head_script %}
        {# First, JQuery, loaded from CDN with local fallback#}
        <script src="http://code.jquery.com/jquery-1.11.3.min.js" type="text/javascript"></script>
        <script>window.jQuery || document.write('<script src="/fallbacks/jquery-1.11.3.min.js">\x3C/script>')</script>

        {% javascripts '../app/Resources/public/js/*' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

    {% endblock head_script %}

    {% block head_inline_script %}
        {% if inlineheadscripts is defined and inlineheadscripts is not empty %}
            {% for javascript in inlineheadscripts %}
                <script>{{ javascript|raw }}</script>
            {% endfor %}
        {% endif %}
    {% endblock head_inline_script %}

    {% block head_bottom %}{% endblock %}
</head>
{% endblock head %}



<body>

{% block body_start %}
{% endblock body_start %}

{% block body %}

{% block header_container %}
    <div class="header-container">
        <div class="header container">
            {% include 'header.html.twig' %}
        </div>
    </div>
{% endblock header_container %}

{% block body_container %}
    <div class="content-container">
        <div class="content container">
            {% block page_header %}
                <div class="page-header">
                    <h1>{% block headline %}Vadrouille Covoiturage{% endblock headline %}</h1>
                </div>
            {% endblock page_header %}
            {# {{ dump(session) }} #}
            {% block flashes %}
                {% for label, flashes in app.session.flashbag.all %}
                    {% for flash in flashes %}
                        <div class="alert alert-dismissible alert-{{ label }} role="alert">
                            {{ flash|raw }}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endblock flashes %}

            {% block content %}
            {% endblock content %}

{#            {% block debug %}
                <div class="well">
                    <h2>Debug - $_SESSION</h2>
                    {{ dump(session) }}
                </div>
            {% endblock debug %}
#}
        </div>
    </div>
{% endblock body_container %}


{% block footer_container %}
    <footer class="footer-container">
        <div class="footer container">
            {% block footer %}
                Footer
            {% endblock footer %}
        </div>
    </footer>
{% endblock footer_container %}

    {% block body_end_before_js %}
    {% endblock body_end_before_js %}

{% block foot_script %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
            $('[data-toggle="popover"]').popover();
        });
    </script>
{% endblock foot_script %}

{% endblock body %}

{% block body_end %}
{% endblock body_end %}

</body>
</html>

