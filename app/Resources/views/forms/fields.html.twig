{# Create a new city widget - needed to remove labels #}
{% block city_widget %}
    {# Renders the form without labels #}
    {{ form_widget(form.name)  }}
    {{ form_widget(form.id)  }}
{% endblock %}

{# Override time widget - to use "h" and "min" instead of ":" #}
{% block time_widget -%}
    {% if widget == 'single_text' %}
        {{- block('form_widget_simple') -}}
    {% else -%}
        {% set attr = attr|merge({class: (attr.class|default('') ~ ' form-inline timepicker')|trim}) -%}
        {% if datetime is not defined or false == datetime -%}
            <div {{ block('widget_container_attributes') -}}>
        {%- endif -%}
        {{- form_widget(form.hour) }} h {{ form_widget(form.minute) }} min {% if with_seconds %}:{{ form_widget(form.second) }} s{% endif %}
        {% if datetime is not defined or false == datetime -%}
            </div>
        {%- endif -%}
    {% endif %}
{%- endblock time_widget %}

{# Create datePicker widget#}
{% block datePicker_widget %}
    {% spaceless %}
        {%  set attr = attr|merge({'class': ((attr.class|default('') ~ ' datepicker')|trim)}) %}
        <input type="text" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
   {% endspaceless %}
{% endblock datePicker_widget %}

{# Create DaysOfWeek widget - button group #}
{% block daysOfWeek_widget %}
    {%  set attr = attr|merge({'class': ((attr.class|default('') ~ ' btn-group daysofweek')|trim),
    'data-toggle' : 'buttons'}) %}
    <div {{ block('widget_container_attributes') }}>
        {%- for child in form %}
            {#  {{ dump(child) }}#}
           {%- set active = (child.vars.checked) ? ' active' : '' %}
           {{- form_widget(child, {
                parent_label_class: ((label_attr.class|default('') ~ ' btn btn-default checkbox-inline' ~ active )|trim),
                translation_domain: choice_translation_domain,
            }) -}}
        {% endfor -%}
    </div>
{% endblock daysOfWeek_widget %}
