{# Step 2 of the form to post/edit a trip :

* Places
* Prices
* Comment
* Driver = Person if not user
* Hide telephon

#}

{% extends 'base.html.twig' %}
{% use 'components/tripmap.html.twig' %}

{% form_theme form 'forms/bootstrap_3_horizontal_layout_4_8.html.twig' %}

{# Leaflet and Mappy CSS and JS #}
{% block head_style %}
    {{ parent() }}
    {{ block('map_styles') }}
{% endblock head_style %}

{% block head_script %}
    {{ parent() }}
    {{ block('head_map_scripts') }}
{% endblock head_script %}

{% block headline %}Proposer un covoiturage <small>(étape 2/2)</small>{% endblock %}

{% block content %}
<div id="post-trip-2">

    <div class="row">

        {{ form_start(form) }}

            <div class="col-sm-8">
            {{ form_errors(form) }}

            {# Hidden fields (times - prices - modified by JS)
            {% set nstops = form.stops|length %}#}
            {% for stop in form.stops %}
                {{ form_widget(stop) }}
            {% endfor %}

            {# Prices #}
            <h2>Prix demandé</h2>

            {% set sortedStops = trip.stops|sortbydelta %}

            <div id='stop_prices'>
                <ul>
                    {% for index, stop in sortedStops if index != 0 %}
                        {{ form_row(form.pricediff[index-1], {
                            'label': sortedStops[index-1].city.name ~ ' - ' ~ stop.city.name ~ ' :'
                            })
                        }}
                    {% endfor %}
                </ul>
                {% if trip.stops|length > 2 %}
                    <div class="row strong">
                        <div class="col-sm-4 text-right"><strong>Total :</strong></div>
                        <div id="total" class="col-sm-8 text-right"></div>
                    </div>
                {% endif %}
            </div>

            {# Person if not a connected user #}
            {% if form.person is defined %}
                <h2>Vous</h2>
                {{ form_widget(form.person.guest) }}
            {% endif %}

            {# Comment #}
            <h2>Commentaire</h2>
            {{ form_row(form.comment, {'label':'Commentaire :'}) }}
        </div>

        <div class="col-sm-4">

            <h3>Récapitulatif</h3>

            <div id='map_container'>
                {{ block('map') }}
            </div>

            <div id='summary'>
                Date : <strong>
                {# Régulier #}
                {% if trip.regular %}
                    tous les {{ trip.days|dayjoin(', ', true) }}.
                {% else %}
                    {{ trip.depDate|localizeddate('full','full',NULL,NULL,"EEEE d MMMM") }}
                {% endif %}
                </strong>
                <br>
                Heure de départ : <strong>
                        {{ trip.depTime|date("H\\hi") }}
                </strong>
            </div>

            <div id="dep_time" class="hidden">{{ trip.depTime|secondsfrommidnight }}</div>

            <div id='stop_times'>
                <ul>
                {% for index, stop in trip.stops|sortbydelta if stop.delta > 0 %}
                    <li>{{ stop.city.name }} : <span id="time-{{ stop.delta }}"></span>
                        <span id="time-buttons-{{ stop.delta }}"></span></li>
                {% endfor %}
                </ul>
            </div>
        </div>

        {{ form_rest(form) }}

        <div class="col-sm-8 col-sm-push-4">
            {% include 'CraueFormFlowBundle:FormFlow:buttons.html.twig' with {
                craue_formflow_button_class_last: 'btn btn-primary',
                craue_formflow_button_class_back: 'btn btn-default pull-left',
                craue_formflow_button_class_reset: 'hidden',
            } %}
        </div>
        {{ form_end(form) }}
    </div>
</div>

{% endblock content %}


{% block body_end %}
    {{ block('map_scripts') }}
    {% javascripts 'bundles/app/js/specific/trip-edit-2.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {# todo : bad bad bad : parceque les étapes ne sont pas dans l'ordre !!!!#}
    {{ block('inline_map_scripts') }}

{% endblock body_end %}
