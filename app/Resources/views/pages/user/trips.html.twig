{% extends 'base.html.twig' %}

{% block headline %}{{ h1 }}{% endblock %}

{% block content %}
 <div class="row">
    <div class="col-sm-12">

        {# Résultats - colonne principale #}

        <div class="col-sm-10 col-sm-push-2">

            {% if pagination.total > 0 %}

                <table class="table table-striped table-hover" width="100%">
                    {% for trip in trips %}
                        {% set stops = trip.stops %}
                        {#{% set driver = trip.driver %}#}
                        {% include "components/tripline.html.twig" %}
                    {% endfor %}
                </table>
                {# {{ dump(trips) }} #}

                {# Pagination #}
                <div class="pull-right">
                    {% include "components/pagination.html.twig" %}
                </div>
            {% else  %}
                {# Pas de résultats #}
                <p>Vous n'avez pas proposé de trajets.</p>
            {% endif %}

        </div>
   </div>
 </div>
{% endblock content %}
