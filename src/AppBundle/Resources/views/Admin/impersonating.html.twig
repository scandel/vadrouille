{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    {% if app.user and object.username != app.user.username %}
        <a href="{{ path('homepage', {'_i_am_now': object.username} ) }}"
           target="_blank" title="Switch user">
            <i class="glyphicon glyphicon-user"></i><i class="glyphicon glyphicon-log-in"></i>
        </a>
    {% else %}
        -
    {% endif %}
{% endblock %}